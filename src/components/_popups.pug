// ПОПАП ЗАЯВКИ
.popup.popup-request#popupRequest
    .popup-request__inner
        button(data-fancybox-close).popup-close
            +img('x-mark.svg')
        .popup-request__title Сотрудничество с нами
        .popup-request__form
            form
                .popup-request__form-inputs
                    .input-wrapper.input-error
                        input(type="text" placeholder="ФИО" required).input
                        .error-text Поле неверно заполнено
                    .input-wrapper
                        input(type="email" placeholder="Электронная почта" required).input
                        .error-text Поле неверно заполнено
                    .input-wrapper
                        input(type="tel" placeholder="Телефон" data-phone-number required).input
                        .error-text Поле неверно заполнено
                    .input-wrapper
                        input(type="file" id="schemeUpload" data-phone-number required)
                        label(for="schemeUpload").input Обзорная схема / ситуационный план
                        button(type="button").clear-input
                            +img("x-mark.svg")
                    .input-wrapper
                        input(type="file" id="techTask" data-phone-number required)
                        label(for="techTask").input Прикрепить техническое задание
                        button(type="button").clear-input
                            +img("x-mark.svg")
                    .input-wrapper
                        textarea(placeholder="Предварительные проектные решения").input
                .popup-request__form-agree
                    button(type="button").btn.btn--primary Оставить заявку
                    p Нажимая на кнопку «Отправить заявку», вы соглашаетесь с обработкой ваших персональных данных